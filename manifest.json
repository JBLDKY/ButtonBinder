{
  "manifest_version": 2,
  "name": "ButtonBinder",
  "version": "1.2",
  "description": "Bind buttons to keyboard shortcuts!",
  "content_scripts": [
    {
      "js": ["jquery.min.js", "submitter.js", "options.js"],
      "matches": ["http://*/*", "https://*/*"]
    }
  ],
  "browser_action": {
    "default_icon": {
      "19": "icons/myicon.png"
    },
    "default_title": "Whereami?"
  },
  "options_ui": {
    "page": "options.html",
    "browser_style": true,
    "chrome_style": true
  },
  "permissions": ["storage"],
  "browser_specific_settings": {
    "gecko": {
      "id": "buttonbinder.jbldsky@gmail.com"
    }
  }
}
